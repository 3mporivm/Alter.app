{
  "manifest_version": 2,
  "name": "alter-app",
  "version": "1.0.0",
  "icons": {},
  "browser_action": {
    "default_title": "Alter-app",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "background",
    "notifications"
  ],
  "externally_connectable": {
		"matches": ["http://127.0.0.1:5500/*"]
	}
}